curl -s -o /hive/sbin/nvXid.sh https://github.com/IIIMaxIII/nvXid/raw/refs/heads/main/nvXid.sh && chmod 755 /hive/sbin/nvXid.sh && (grep -qxF "@reboot root /hive/sbin/nvXid.sh" /hive/etc/crontab.root || echo "@reboot root /hive/sbin/nvXid.sh" >> /hive/etc/crontab.root) && (grep -qxF "*/5 * * * * root /hive/sbin/nvXid.sh" /hive/etc/crontab.root || echo "*/5 * * * * root /hive/sbin/nvXid.sh" >> /hive/etc/crontab.root)
