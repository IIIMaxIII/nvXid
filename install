install:
wget -q -O /hive/bin/nvErr https://raw.githubusercontent.com/IIIMaxIII/nvXid/main/nvErr && sudo chmod 755 /hive/bin/nvErr && (sudo grep -qxF "@reboot /hive/bin/nvErr" /hive/etc/crontab.root || sudo sh -c 'echo "@reboot /hive/bin/nvErr" >> /hive/etc/crontab.root') && (sudo grep -qxF "*/5 * * * * /hive/bin/nvErr" /hive/etc/crontab.root || sudo sh -c 'echo "*/5 * * * * /hive/bin/nvErr" >> /hive/etc/crontab.root')
reboot

remove:
[ -f /hive/bin/nvErr ] && sudo rm -f /hive/bin/nvErr; sudo grep -q '/hive/bin/nvErr' /hive/etc/crontab.root && sudo sed -i '/\/hive\/bin\/nvErr/d' /hive/etc/crontab.root
reboot
