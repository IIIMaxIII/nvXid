wget -q -O /hive/sbin/nvErrorCheck.sh https://github.com/IIIMaxIII/nvXid/raw/refs/heads/main/nvXid.sh && chmod 755 /hive/sbin/nvErrorCheck.sh && (grep -qxF "@reboot root /hive/sbin/nvErrorCheck.sh" /hive/etc/crontab.root || echo "@reboot root /hive/sbin/nvErrorCheck.sh" >> /hive/etc/crontab.root) && (grep -qxF "*/5 * * * * root /hive/sbin/nvErrorCheck.sh" /hive/etc/crontab.root || echo "*/5 * * * * root /hive/sbin/nvErrorCheck.sh" >> /hive/etc/crontab.root)
